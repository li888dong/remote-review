.input-container {
  margin-top: 30rpx;
  padding: 0 30rpx;
  display: flex;
  font-size: 36rpx;
}

.input-area {
  width: 590rpx;
  height: 85rpx;
  padding-left: 93rpx;
  line-height: 85rpx;
  color: #222;
  border-radius: 10rpx;
  border: 1rpx solid #dbdbdb;
  box-sizing: border-box;
  background: url("https://www.hnsjb.cn/static/img/wxapp/search.png") left center no-repeat, #fff;
  background-size: 37rpx 37rpx;
  background-position-x: 30rpx;
}

input {
  width: 500rpx;
  height: 85rpx;
  line-height: 85rpx;
}

.back {
  text-align: center;
  color: #f82212;
  width: 100rpx;
  line-height: 85rpx;
}
.news-item {
    padding: 0 32rpx;
}

.grey-item {
    filter: grayscale(1);
    opacity: 0.5;
}
.news-item-hover {
    background: #e3e3e3;
}
.news-item.forbid-item .news-title {
    opacity: 0.5;
}
.news-title {
    color: #4a4a4a;
    font-size: 40rpx;
    line-height: 1.4;
}

.news-inner {
    padding-top: 30rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #e3e3e3;
}

.reject.news-item .news-inner {
    padding-left: 80rpx;
    background: url("https://www.hnsjb.cn/static/img/wxapp/warn.png") left center no-repeat;
    background-size: 40rpx 40rpx;
}

.forward.news-item .news-inner {
    padding-left: 80rpx;
    background: url("https://www.hnsjb.cn/static/img/wxapp/daiban.png") left center no-repeat;
    background-size: 40rpx 40rpx;
}

.news-info {
    color: #b9b9b9;
    font-size: 28rpx;
  
}

.news-time, 
.news-author,
.news-copyfrom,
.news-catname {
    display: inline-block;
}

.news-copyfrom,.news-catname {
    margin-left: 30rpx;
}