/* pages/login/login.wxss */

.login-page {
  width: 100%;
  background: #f6f6f6;
  padding: 100rpx 30rpx;
  box-sizing: border-box;
  height: 100vh;
  margin-bottom: 50rpx;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 155rpx;
  height: 155rpx;
  border-radius: 16rpx;
  margin: 20rpx;
}

.login-form {
  margin-top: 115rpx;
}

.section {
  margin-top: 50rpx;
  height: 58rpx;
  border-bottom: 1rpx solid #787878;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.input-label {
  display: block;
  width: 100px;
  font-size: 36rpx;
  color: #000;
}

.input {
  flex: 1;
  font-size: 30rpx;
}

.btn-area {
  margin-top: 85rpx;
}

.btn-area button {
  background: #3098e5;
  color: #fff;
}
