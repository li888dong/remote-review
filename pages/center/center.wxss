.center-page {
    width:100%;
    padding-top:30rpx;
    padding-bottom: 120rpx;
}
view {
    box-sizing: border-box;
}
.userinfo {
    width:100%;
    height:160rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #E5E5E5;
    border-bottom: 1rpx solid #E5E5E5;
    background: #ffffff;
    padding:0 30rpx;
    position: relative;
}
.userinfo-avatar {
    width:114rpx;
    height:114rpx;
    border-radius: 16rpx;
    position: absolute;
    left:30rpx;
    top: 23rpx;
}
.userinfo view {
    display: inline-block;
    line-height: 160rpx;

}
.name {
    color: #000;
    font-size: 36rpx;
    margin-left: 154rpx;
}
.bianji-switch{
  float: right;
  font-size: 24rpx;
}
.role {
    color: #999999;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.search-area {
    width:100%;
    padding:0 30rpx;
    margin-top: 30rpx;
}
.search {
    height:85rpx;
    width:690rpx;
    border-radius: 10rpx;
    border:1rpx solid #DBDBDB;
    color: #969696;
    line-height:85rpx;
    font-size: 36rpx;
    background: url("https://www.hnsjb.cn/static/img/wxapp/search.png") center center no-repeat,#ffffff;
    background-size: 37rpx 37rpx;
    background-position-x: 277rpx;
    padding-left: 339rpx;
    box-sizing: border-box;
}

.user-stat {
    margin-top:30rpx;
    border-top:1rpx solid #E5E5E5;
    background:#ffffff;
    border-bottom: 1rpx solid #E5E5E5;
}
.user-figure {
    height:80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    font-size: 36rpx;
}
.user-figure text {
    color: #3EA3E6;
}
.link-area {
    margin-top: 30rpx;
}
.link {
    height:100rpx;
    width:690rpx;
    background: #ffffff;
    padding:0 30rpx;
    line-height:100rpx;
    font-size: 36rpx;
    position: relative;
    border-top: 1rpx solid #E5E5E5;
    border-bottom: 1rpx solid #E5E5E5;
    position: relative;
}

.link::after {
    width:16rpx;
    height:100%;
    background: url("https://www.hnsjb.cn/static/img/wxapp/right-arrow.png") center center no-repeat;
    background-size: 16rpx 25rpx;
    content: '';
    display: block;
    position: absolute;
    right:30rpx;
    top:0;
}

.radio-group {
    margin-top:30rpx;
    border-top:1rpx solid #E5E5E5;
    background:#ffffff;
    border-bottom: 1rpx solid #E5E5E5;
}
.section-title {
    height:100rpx;
    line-height:100rpx;
    padding-left: 30rpx;
    border-bottom: 1rpx solid #E5E5E5;
    position: relative;
}
.radio {
    display: block;
    position: relative;
    width:100%;
    height:100rpx;
    padding-left:30rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}
.padding-area {
    margin-top: 30rpx;
    padding:0 30rpx;
    width:100%;
    box-sizing: border-box;
}

